.login-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #900C3F;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.white-box {
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.agreement-text {
  font-size: 12px;
  color: #888888;
  margin-bottom: 20px;
  font-family: 'SimSun', '宋体', sans-serif; /* 设置字体为宋体 */
}

.highlight {
  color: #F98949; /* 变色文字 */
}

.login-button {
  width: 100%;
  background-color: #28a745;
  color: white;
  display: flex;
  align-items: center; /* 垂直居中对齐按钮内容 */
  justify-content: center; /* 水平居中对齐按钮内容 */
  padding: 10px 5px;
  font-size: 16px;
  margin-top: 10px; /* 增加顶部外边距，防止紧贴文字 */
  border-radius: 10px;
}

.wechat-icon {
  width: 30px; /* 图标大小 */
  height: 30px; /* 图标大小 */
  margin-right: 8px; /* 图标和文字之间的间距 */
}


.register-container {
  background-color: #EEEEEE;
  padding: 10px;
  position: relative; /* 确保 canvas 被正确放置 */
  height: 100%; /* 父容器填充整个屏幕 */
  z-index: 0; /* 确保内容不被遮挡 */
}

/* 让 canvas 填充整个背景 */
.full-background-canvas {
  position: fixed; /* 使 canvas 可以覆盖在其他内容之上 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 确保 canvas 在背景层，不遮挡其他内容 */
}


