/* discuss.wxss */
.containner {
  display: flex;
  flex-direction: column;
  padding-top: 0; /* 确保容器顶部没有额外的内边距 */

}
.tabs-container {
  position: relative;
}
.tabs-container .tabs-create {
  position: absolute;
  background-color: aqua;
  margin-left: 30px;
}

.discuss-list {
  padding: 10px;
}

.discussion-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.content {
  display: flex;
  margin-top: 10px;
}

.discussion-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}

.text-content {
  flex: 1;
}

.stats {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.stat-item {
  font-size: 12px;
  color: #999;
}