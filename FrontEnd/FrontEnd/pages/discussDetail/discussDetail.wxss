.contain {
  /* background-color: pink; */
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  padding: 10rpx;
}

.article {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.content {
  font-size: 16px;
  text-align: left;
  margin-top: 10px;
  /* background-color: blue; */
}

.comments {
  margin-top: 20px;
}

.comments-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  margin-top: 0px;
}

.comment {
  display: flex;
  margin-bottom: 10px;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 10px;
}

.comment-content {
  flex-grow: 1;
}

.comment-author {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.comment-text {
  font-size: 14px;
}


.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 10px;
}

.author-meta {
  flex-grow: 1;
}

.author-name {
  font-size: 18px;
  font-weight: bold;
}

.publish-time {
  font-size: 14px;
  color: #888;
}


.actions {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px 10px;
  border: none;
  /* background-color: #f8f8f8; */
  border-radius: 5px;
}

.like,
.share,
.commentt {
  /* Additional styling for action buttons */
}

.iconfont {
  margin-right: 5px;
}
